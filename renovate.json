{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["(^|/)VERSION$"],
      "matchStrings": [
        "^(?<currentValue>.*)$"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "bitwarden/clients",
      "extractVersionTemplate": "cli-v(?<version>.*)"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["github-releases"],
      "matchManagers": ["regex"],
      "matchPackageNames": ["bitwarden/clients"],
      "versioning": "semver",
      "allowedVersions": "/^cli-v\\d+\\.\\d+\\.\\d+$/",
      "groupName": "Bitwarden CLI Version Updates",
      "prConcurrentLimit": 1,
      "automerge": true,
      "automergeType": "branch-merge"
    }
  ]
}
